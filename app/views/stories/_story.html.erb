<!-- getting story as local var -->
<div class="row  justify-content-center">
  <div class="col-md-8 col-lg-6">

    <div class="card mb-3 ">

      <div class="card-body  ">
        <div class=" row mt-2 align-items-center justify-content-start ">
          <div class="col-2 col-md-2 ">
            <%= image_tag story.account.image.url(:thumbnail),  class: "profile_pic rounded-circle"%>
          </div>
          <div class="col-6 col-md-6  ">
            <div>
              <%=  story.account.name %>
            </div>
            <div>
              <%=  time_ago_in_words(story.created_at)  + " ago"   %>
            </div>

          </div>
          <div class="col-2 col-md-2 ">
            <button type="button" class="btn btn-sm btn-primary " data-toggle="modal" data-target="#<%= story.id.to_s %>">
              Show
            </button>
          </div>

        <% if  story.account == current_account  %>
          <div class="col-2 col-md-2 pr-0">
            <%= link_to story_path(story), method: :delete, data: { confirm: 'Are you sure?' } , class: "nounderline mx-2" do %>
              <i class="far fa-trash-alt fa-2x text-danger" aria-hidden="true"></i>
            <% end %>
          </div>
        <% end %>


        </div>
      </div>
    </div>


    <!-- <%= image_tag story.image.url(:standard), class: " img-thumbnail "%> -->
  </div>
</div>

<!-- Button trigger modal -->

<!-- Modal -->

<div class="modal fade" id="<%= story.id.to_s %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          <%= image_tag story.account.image.url(:thumbnail),  class: "mr-2 profile_pic rounded-circle"%>
          <%=  story.account.name  %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= image_tag story.image.url(:standard), class: "w-100 h-100 "%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

      </div>
    </div>
  </div>
</div>
