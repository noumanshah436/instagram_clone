<% p local_assigns[:id]  %>

<%= form_for  Comment.find(id), :html => {:class => "w-100"}, remote: true do |f| %>

  <%= f.hidden_field :account_id, value: current_account.id %>
  <%= f.hidden_field :post_id, value: @post.id %>

  <%= f.text_field :content, class: "form-control comment-input border-0" , autocomplete: :off %>

<% end %>


