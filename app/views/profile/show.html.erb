<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card  w-100 mb-3">
      <%= image_tag @account.image.url(:standard), class: "img-thumbnail "%>
      <div class="card-body">
        <h5 class="card-title"><%= @account.name %></h5>
        <p class="card-text">
          <h4><%= @account.bio %></h4>
        </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
           <span id="follower-count">
            <%= render 'follower_count'  %>
          </span>
        </li>

        <li class="list-group-item">
           <strong>Following:</strong> <%= @account.followees.count %>
        </li>
        <li class="list-group-item"><strong>Email:</strong> <%= @account.email %></li>
        <li class="list-group-item"><strong>Website:</strong> <%= @account.website %></li>
      </ul>
      <% if @account != current_account %>
        <div class="card-body">
          <span id="follow-btn">
            <%= render 'follow_button'  %>
          </span>
        </div>
      <% end %>
    </div>
    
    <% if @account.active?  || @is_friend  %>
      <%= render 'my_posts' %>
    <% end %>

  </div>
</div>


