<nav class="navbar navbar-expand-lg navbar-dark bg-dark">

  <!-- <a class="navbar-brand" href="#">Friend App</a> -->
  <%= link_to 'Instagram', root_path, class:"navbar-brand" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">


      <% if account_signed_in? %>
      
        <li class="nav-item">
          <%= link_to "Posts", posts_path, class:"nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Profile", account_path(current_account), class:"nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Sign Out", destroy_account_session_path, method: :delete, class:"nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Edit Profile", edit_account_registration_path, class:"nav-link" %>
        </li>

      <% else %>

        <li class="nav-item">
          <%= link_to "Sign Up", new_account_registration_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign In", new_account_session_path, class:"nav-link" %>
        </li>

      <% end %>

    </ul>

    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
    </form>


  </div>
</nav>

