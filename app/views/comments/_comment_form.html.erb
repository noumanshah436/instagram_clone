<%= form_for [@post, Comment.new], class: 'w-100', remote: true do |f| %>

  <%= f.hidden_field :account_id, value: current_account.id %>
  <%= f.hidden_field :post_id, value: @post.id %>


  <% if  local_assigns[:parent]  %>
    <%= f.hidden_field :parent_id, value: parent %>

  <% end %>

  <%= f.text_field :content, class: "form-control comment-input border-0", placeholder: "Add a comment ...", autocomplete: :off  %>

<% end %>


